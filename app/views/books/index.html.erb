<h1>Books</h1>

<div class = "box">
  <h2>New book</h2>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <p>Title</p>
    <%= f.text_field :title %><!--モデル名をもとにdbにアクセス -->

    <p>Body</p>
    <%= f.text_area :body %>

    <div><%= f.submit 'Create Book' %></div>
  <% end %>
</div>